{		
	"content_security_policy": "script-src 'self' https://*.vk.com https://vk.com https://vk.expert; object-src 'self'",

	"incognito": "spanning",
	
	"name" : "VK Expert",
	"version" : "1.0.9",
	"manifest_version" : 2,
	
 	"description": "Добавляет множество функций в соц. сеть vk.com",
  
	"browser_action": {
		"default_icon": "icons/default.png",
		"default_title": "VK Expert",
		"default_popup": "pages/popup/index.html"
	},
	
	"icons": { 
		"16": "icons/default.png",
		"48": "icons/default.png",
		"128": "icons/default.png" 
    },
    
	"background": {
	    "scripts": [ 
	    	"source/lib/jquery.js",
	    	"source/setting.js",
	    	"source/plugins.js",
	    	"source/core.js"
	    ]
	},
  	
    "content_scripts": [
    	{
    		"matches": [
    			"*://vk.com/*",
    			"*://*.vk.com/*"
    		],
    		"js": [ "source/setting.js", "source/content.js" ],
    		"run_at" : "document_start"
    	}, {
    		"matches": [
    			"*://vk.expert/*"
    		],
    		"js": [ "source/content_vkh.js" ],
    		"run_at" : "document_start"
    	}
    ],
	
	"permissions": [
        "storage",
        "cookies",
        "downloads",
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "proxy",
  		"clipboardWrite",
        "<all_urls>"
    ],
    
  	"web_accessible_resources": [
  		"source/lib/fontawesome/brands.js",
  		"source/lib/fontawesome/fontawesome.js",
  		"source/lib/fontawesome/regular.js",
  		"source/lib/fontawesome/solid.js",
  		"source/lib/jquery.js",
  		"source/setting.js", 
  		"source/plugins.js", 
  		"source/vk.js"
  	]
}
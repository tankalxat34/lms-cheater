{
    "incognito": "spanning",

    "name": "LMS Cheeter",
    "version": "1.0.0",
    "manifest_version": 2,
    "author": "Alexander Podstrechnyy",

    "description": "Читер для СДО РАНХиГС. Во время прохождения теста подсвечиваются наиболее выбираемые пользователями ответы. По вопросам: https://vk.com/tankalxat34",

    "browser_action": {
		"default_icon": "icons/default.png",
		"default_title": "lms cheeter",
		"default_popup": "pages/popup/index.html"
	},

    "icons": { 
		"16": "icons/default.png",
		"48": "icons/default.png",
		"128": "icons/default.png" 
    },

    "background": {
	    "scripts": [ 
	    	"src/core.js"
	    ]
	},

    "content_scripts": [
        {
    		"matches": [
    			"*://lms.ranepa.ru/*"
    		],
    		"js": [ "src/core.js" ],
    		"run_at" : "document_end"
    	}        
    ],

    "permissions": [
        "tabs",
        "activeTab",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ]
}